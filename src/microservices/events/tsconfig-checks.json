{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    // очень важные
    "strictNullChecks": true,
    // очень важные
    "strictPropertyInitialization": false,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    // Сверху основные
    // структуру у которой совершенно точно будут известные некоторые свойства, а некоторые могут быть, а могут и отсутствовать
    "noPropertyAccessFromIndexSignature": false,
    //    проверяет обращение к обьекту через точку, но не запрещает через object['method']
    "noUncheckedIndexedAccess": true,
    // как обеъекты так и массивы
    "noImplicitReturns": true,
    // обязательное возвращение чтобы всех веток функций результата
    "noFallthroughCasesInSwitch": true,
    // switch/case правильное оформление
    "noUnusedLocals": true,
    // наличие неиспользованных переменных переменных и аргументов функций соответственно
    "noUnusedParameters": true
    // наличие неиспользованных переменных переменных и аргументов функций соответственно
  }
}
